{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "strict": true,
    "lib": [ "ESNext" ],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
  }
}
